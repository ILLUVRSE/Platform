    "turbo": "2.0.6"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "@react-three/drei": "^10.0.0",
    "@react-three/fiber": "^9.0.0",
    "@react-three/xr": "^6.0.0",
    "three": "^0.169.0"
  }
}
