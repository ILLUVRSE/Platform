{
  "name": "illuvrse",
  "version": "0.0.1",
  "private": true,
  "description": "ILLUVRSE platform monorepo",
  "engines": {
    "node": ">=20.18.0",
    "pnpm": ">=10.24.0"
  },
  "scripts": {
