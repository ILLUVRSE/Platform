{
  "name": "illuvrse",
  "version": "0.0.1",
  "private": true,
  "description": "ILLUVRSE platform monorepo",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:food": "pnpm --filter moms-kitchen dev -- --port 4001",
    "dev:gridstock": "pnpm --filter gridstock dev -- --port 4002",
    "build": "pnpm --filter web build",
    "build:food": "pnpm --filter moms-kitchen build",
    "build:gridstock": "pnpm --filter gridstock build",
    "lint": "pnpm --filter web lint",
    "lint:food": "pnpm --filter moms-kitchen lint",
    "lint:gridstock": "pnpm --filter gridstock lint",
    "test:smoke": "pnpm --filter @illuvrse/tests test",
    "start:platform": "pnpm --filter web start -- --port 3000"
  },
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "turbo": "2.0.6"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0",
    "@react-three/drei": "^9.92.6",
    "@react-three/fiber": "^8.15.16",
    "@react-three/xr": "5.0.3",
    "three": "^0.152.2"
  }
}
